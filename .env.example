# Core
APP_ENV=dev
CLINIC_TZ=Europe/Brussels
DEFAULT_LOCALE=fr-FR

# OpenAI / Agents SDK (optional for bare run)
OPENAI_API_KEY=

AGENT_MODEL=gpt-4.1
OPENAI_BASE_URL=
OPENAI_ORG_ID=
OPENAI_PROJECT=
AGENT_AUTO_REPLY=false
AGENT_DRY_RUN=true

# MCP / GitHub (for Codex global MCP)
# Provide a GitHub Personal Access Token with needed scopes
# If set, Codex will use it via ~/.config/codex/config.toml
GITHUB_MCP_PAT=

# WhatsApp (Cloud API)
WHATSAPP_TOKEN=
WHATSAPP_VERIFY_TOKEN=
WHATSAPP_PHONE_ID=
WHATSAPP_BASE_URL=https://graph.facebook.com/v18.0

# Google Calendar (optional for later phases)
GOOGLE_CREDS_JSON=
GOOGLE_CALENDAR_ID=

# Scheduling / Jobs
REMINDER_HOURS_BEFORE=24

# Security & Privacy
REDACT_LOGS=true
DATA_RETENTION_DAYS=90

# Webhook / Server
PORT=8080
BASE_URL=http://localhost:8080

# Build metadata (populated by CI/CD if desired)
APP_VERSION=0.1.0
GIT_SHA=unknown
