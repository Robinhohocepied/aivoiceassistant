# Core
APP_ENV=dev
CLINIC_TZ=Europe/Brussels
DEFAULT_LOCALE=fr-FR

# OpenAI / Agents SDK (optional for bare run)
OPENAI_API_KEY=

AGENT_MODEL=gpt-4.1
OPENAI_BASE_URL=
OPENAI_ORG_ID=
OPENAI_PROJECT=
AGENT_AUTO_REPLY=false
AGENT_DRY_RUN=true
# Use the model to compose replies (tone/phrasing). If false, use templated messages.
# Generative replies (model-composed messages)
AGENT_GENERATE_REPLIES=false
# Fine-grained toggles (default follow-ups off to avoid loops; confirmations/alternatives on)
AGENT_GENERATE_FOLLOWUPS=false
AGENT_GENERATE_CONFIRMATIONS=true
AGENT_GENERATE_ALTERNATIVES=true

# MCP / GitHub (for Codex global MCP)
# Provide a GitHub Personal Access Token with needed scopes
# If set, Codex will use it via ~/.config/codex/config.toml
GITHUB_MCP_PAT=

# WhatsApp (Cloud API)
WHATSAPP_TOKEN=
WHATSAPP_VERIFY_TOKEN=
WHATSAPP_PHONE_ID=
WHATSAPP_BASE_URL=https://graph.facebook.com/v18.0

# Google Calendar (optional for later phases)
GOOGLE_CREDS_JSON=
# Alternative to GOOGLE_CREDS_JSON: provide base64-encoded JSON (single line)
# GOOGLE_CREDS_JSON_B64=
GOOGLE_CALENDAR_ID=
CALENDAR_SEND_UPDATES=false

# Scheduling / Jobs
REMINDER_HOURS_BEFORE=24

# Security & Privacy
REDACT_LOGS=true
DATA_RETENTION_DAYS=90

# Webhook / Server
PORT=8080
BASE_URL=http://localhost:8080

# Build metadata (populated by CI/CD if desired)
APP_VERSION=0.1.0
GIT_SHA=unknown

# New deterministic flow (brief-driven). If true, uses a step-by-step FR booking flow
# with identity, service, triage, preferences, 3-slot offers, confirmation.
FLOW_V2_ENABLED=false
